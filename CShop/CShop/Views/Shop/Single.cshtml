                                                        <img src="~/Content/image1/sub/@Html.DisplayFor(modelItem=>t.image)" style="cursor:pointer;width:115px !important;height:115px !important;" onclick="sendid1(@Html.DisplayFor(modelItem=>t.partID))">
                                                </div>
                                             } }
                                        </div>
                                    </div></div>
                                <!--//tab_one-->
                                <div class="tab2">
                   
